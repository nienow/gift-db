<script>
    const TEMPLATE = `
  <div class="card">
    <div class="card-header"></div>
    <div class="card-body"></div>
  </div>
`;

    export default class Category extends HTMLElement {
        static get observedAttributes() {
            return [];
        }

        doUpdate() {
            this.querySelector('.card-header').innerHTML = this.getAttribute('name');
            this.querySelector('.card-body').innerHTML = this.getAttribute('blurb');
            // this.querySelector('.card-date').textContent = new Date(this.getAttribute('date') * 1000).toLocaleString();
        }

        connectedCallback() {
            this.innerHTML = TEMPLATE;
            this.doUpdate();
            this.addEventListener('click', () => {
                // window.open(this.getAttribute('url'), '_blank');
            });
        }

        attributeChangedCallback() {
            if (this.innerHTML) {
                this.doUpdate();
            }
        }
    }

    window.customElements.define('my-cat', Category);
</script>

