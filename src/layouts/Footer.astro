---
const githubSVG = await fetch('https://storage.googleapis.com/randombits/images/github.svg');
const discordSVG = await fetch('https://storage.googleapis.com/randombits/images/discord.svg');
const twitterSVG = await fetch('https://storage.googleapis.com/randombits/images/x.svg');
---

<footer>
    <div class="footer-content">

        <div class="footer-section footer-logo">
            <!--<img src="/logo-dark.svg" alt="logo" width="100"/>-->
            <a href="https://randombits.dev" class="brought">
                <img src="https://storage.googleapis.com/randombits/images/logo2.png" alt="random bits logo"
                     width="100"/>
                <div>
                    <div>Brought to you by</div>
                    <div class="rb">Random Bits</div>
                </div>
            </a>

            <div class="social-links">
                <a href="https://twitter.com/RandomBitsDev">
                    <div set:html={twitterSVG}/>
                </a>
                <a href="https://discord.gg/Kv9SZw4G">
                    <div set:html={discordSVG}/>
                </a>
                <a href="https://github.com/randombits-dev/offering-inspiration">
                    <div set:html={githubSVG}/>
                </a>
            </div>

        </div>


</footer>

<style>
    footer {
        background-color: #333;
        color: #eee;
    }

    .footer-content {
        padding: 50px 0;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
    }

    .footer-content img {
        width: 75px;
        border-radius: 50px;
        margin-right: 20px;
    }

    .brought {
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        text-align: left;
    }

    .rb {
        margin-top: 5px;
        font-size: 28px;
        font-weight: bold;
    }
</style>
