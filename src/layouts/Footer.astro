---
const githubSVG = await fetch('https://storage.googleapis.com/randombits/images/github.svg');
const discordSVG = await fetch('https://storage.googleapis.com/randombits/images/discord.svg');
const twitterSVG = await fetch('https://storage.googleapis.com/randombits/images/x.svg');
---

<footer>
  <div>
    <a href="https://randombits.dev" class="footer__brought">
      <img src="https://storage.googleapis.com/randombits/images/logo2.png" alt="random bits logo"
           width="100"/>
      <div>
        <div>Brought to you by</div>
        <div class="footer__rb">Random Bits</div>
      </div>
    </a>

    <div class="social-links">
      <a href="https://twitter.com/RandomBitsDev" aria-label="Twitter">
        <div set:html={twitterSVG}/>
      </a>
      <a href="https://discord.gg/Kv9SZw4G" aria-label="Discord">
        <div set:html={discordSVG}/>
      </a>
      <a href="https://github.com/randombits-dev/offering-inspiration" aria-label="Github">
        <div set:html={githubSVG}/>
      </a>
    </div>
  </div>
</footer>

<style is:global>

  footer {
    background-color: #333;
    color: #eee;
  }

  footer a {
    text-decoration: none;
  }

  footer > div {
    padding: 50px 0;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .footer__brought img {
    width: 75px;
    border-radius: 50px;
    margin-right: 20px;
  }

  .footer__brought {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    text-align: left;
  }

  .footer__rb {
    margin-top: 5px;
    font-size: 28px;
    font-weight: bold;
  }

  .social-links {
    margin-top: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-links a {
    text-decoration: none;
    padding: 0 20px;
    fill: #eee;
  }

  .social-links svg:hover {
    scale: 1.1;
  }

  .social-links svg {
    width: 32px;
    height: 32px;
  }
</style>
