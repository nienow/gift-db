---
import Layout from "../layouts/Layout.astro";
import Faq from "../components/Faq.astro";
import Footer from "../layouts/Footer.astro";

const metaraw = await Astro.glob('../data/meta.yml');
const meta = metaraw[0].default;
const categories = Object.keys(meta);
---
<Layout title="Offering Inspiration - A gift idea site"
        description="Find a unique gift from successful kickstarter campgains.">

    <div class="container">
        <div class="text-center">
            <div class="hero">
                <div class="hero-text-1">Offering Inspiration</div>
                <!--<div class="hero-text-2">a gift idea site</div>-->

            </div>
            <div class="choose">Gift ideas from successful Kickstarter projects.
                <br><br>Choose a category to get started.</div>

            <div class="categories">
              {
                categories.map(c => (
                        <a class="category-name" href={`/${c}`} data-cat={c}>{c}</a>
                ))
              }
            </div>
        </div>
        <Faq categories={meta}/>


    </div>

    <Footer/>
</Layout>

<style>

    .hero {
        text-align: justify;
    }

    .bold {
        font-weight: bold;
    }

    .hero-logo {
        width: 200px;
        margin-top: 100px;
    }

    .hero-text-1 {
        margin-top: 50px;
        font-size: 4rem;
        margin-bottom: 0;
        font-family: 'Poiret One', cursive;
        letter-spacing: 6px;
        font-weight: bold;
        text-align: center;
    }

    .hero-text-2 {
        font-family: 'Poiret One', cursive;
        text-align: center;
        margin-right: 10px;
        margin-top: 10px;
        letter-spacing: 5px;
        font-size: 2rem;
    }

    @media screen and (max-width: 1000px) {
        .hero-text-1 {
            font-size: 3rem;
            text-align: center;
        }

        .hero-text-2 {
            font-size: 2rem;
            text-align: center;
        }
    }

    @media screen and (max-width: 600px) {
        .hero-text-1 {
            font-size: 3rem;
            text-align: center;
        }

        .hero-text-2 {
            font-size: 1.5rem;
            text-align: center;
        }
    }

    .choose {
        font-size: 1.3rem;
        margin-top: 50px;
    }
</style>
