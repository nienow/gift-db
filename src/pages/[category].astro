---
import Layout from "../layouts/Layout.astro";
export async function getStaticPaths() {
  const metaraw = await Astro.glob('../data/meta.yml');
  const meta = metaraw[0].default;
  return Object.keys(meta).map((category) => ({params: {category}}));
}

const {category} = Astro.params;
---

<Layout title={`Offering Inspiration - ${category}`} description={`Find a unique gift from the ${category} category`}
        xmlns="">
    <category-projects cat={category}/>
</Layout>

<script>
  import {CategoryProjects} from '../components/Category';
  import Card from '../components/Card';
  import ReportMenu from '../components/ReportMenu';

  customElements.define('category-projects', CategoryProjects);
  customElements.define('project-card', Card);
  customElements.define('report-menu', ReportMenu);
</script>
